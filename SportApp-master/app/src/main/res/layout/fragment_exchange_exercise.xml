<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_exchange_exercise"
    tools:context=".fragments.ExchangeExercise">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/choose_equipment_label"
        android:textSize="@dimen/target_text_size"
        android:id="@+id/text_label_choose_equipment_exchange_exercise"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.helper.widget.Flow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id = "@+id/flow_choose_equipment_exchange_exercise"
        android:layout_marginTop="5dp"
        app:flow_horizontalGap="15dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="15dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_choose_equipment_exchange_exercise"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exchange_exercises_label"
        android:layout_marginTop="5dp"
        android:id="@+id/button_confirm_exchange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flow_choose_equipment_exchange_exercise"/>

</androidx.constraintlayout.widget.ConstraintLayout>