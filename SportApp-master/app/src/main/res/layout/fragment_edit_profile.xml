<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_edit_profile"
    tools:context=".fragments.EditProfile">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_content_edit_profile"
        android:paddingBottom="50dp">

    <TextView
        android:id="@+id/text_label_name_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/username_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/text_label_age_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/age_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:paddingBottom="5dp"
        android:textColor="@color/header_text_color"
        app:layout_constraintTop_toBottomOf="@id/text_label_name_edit_profile"
        app:layout_constraintEnd_toStartOf="@id/text_age_edit_profile"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/text_age_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/age_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/text_label_age_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_age_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_label_age_edit_profile"/>


    <TextView
        android:id="@+id/text_label_weight_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/weight_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text_label_age_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/text_weight_edit_profile" />


    <EditText
        android:id="@+id/text_weight_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/weight_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/text_label_weight_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_weight_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_label_weight_edit_profile"/>

    <TextView
        android:id="@+id/text_label_BMI_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bmi_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_label_weight_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_BMI_edit_profile"/>


    <TextView
        android:id="@+id/text_BMI_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/bmi_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        app:layout_constraintTop_toTopOf="@id/text_label_BMI_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_BMI_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_label_BMI_edit_profile"/>

    <TextView
        android:id="@+id/text_label_height_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/body_height_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@+id/text_label_BMI_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/text_height_edit_profile"/>

    <EditText
        android:id="@+id/text_height_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/body_height_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@id/text_label_height_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_height_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_label_height_edit_profile"/>

    <TextView
        android:id="@+id/text_label_workout_type_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/workout_type"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_label_height_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinner_workout_type_edit_profile" />

    <Spinner
        android:id="@+id/spinner_workout_type_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/workout_type_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        app:layout_constraintTop_toTopOf="@id/text_label_workout_type_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_workout_type_edit_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/text_label_workout_type_edit_profile"/>

    <TextView
        android:id="@+id/text_label_gender_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/gender_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toBottomOf="@id/text_label_workout_type_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/spinner_gender_edit_profile" />


    <Spinner
        android:id="@+id/spinner_gender_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/gender_placeholder"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        app:layout_constraintTop_toTopOf="@id/text_label_gender_edit_profile"
        app:layout_constraintStart_toEndOf="@id/text_label_gender_edit_profile"
        app:layout_constraintBottom_toBottomOf="@id/text_label_gender_edit_profile"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/text_label_limitation_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/physical_restrictions"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        app:layout_constraintTop_toBottomOf="@id/text_label_gender_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_physical_restrictions_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flow_horizontalGap="15dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="15dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_limitation_edit_profile"
        app:layout_constraintBottom_toTopOf="@id/text_label_equipment_edit_profile"/>

    <TextView
        android:id="@+id/text_label_equipment_edit_profile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/equipment"
        android:textAlignment="center"
        android:textSize="@dimen/target_text_size"
        android:textColor="@color/header_text_color"
        app:layout_constraintTop_toBottomOf="@id/flow_physical_restrictions_edit_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/flow_equipment_edit_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:flow_horizontalGap="15dp"
        app:flow_horizontalStyle="packed"
        app:flow_verticalGap="15dp"
        app:flow_verticalStyle="packed"
        app:flow_wrapMode="chain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_label_equipment_edit_profile" />
        android:layout_marginBottom="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/floating_edit_profile"
            android:src="@drawable/ic_confirm"
            android:backgroundTint="@color/checkedColor"
            android:contentDescription="@string/edit"
            app:tint="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"/>

</RelativeLayout>