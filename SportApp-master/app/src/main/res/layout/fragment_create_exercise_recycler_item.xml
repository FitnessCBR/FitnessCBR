<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_header_create_recycler_item"
        android:background="@color/darkGrayRecycler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_add_create_exercise">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_title_create_recycler_item"
            app:layout_constraintStart_toStartOf="@id/constraint_header_create_recycler_item"
            app:layout_constraintTop_toTopOf="@id/constraint_header_create_recycler_item"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_content_create_recycler_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_add_create_exercise"
        app:layout_constraintTop_toBottomOf="@id/constraint_header_create_recycler_item">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prime_muscle_label"
            android:id="@+id/text_label_prime_muscle_create"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_prime_muscle_create_recycler_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_prime_muscle_create_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_prime_muscle_create"
            app:layout_constraintTop_toTopOf="@id/text_label_prime_muscle_create"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_secondary_muscle_create_recycler_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/secondary_muscle_label"
            android:id="@+id/text_label_secondary_muscle_create_recycler_item"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_label_prime_muscle_create"
            app:layout_constraintEnd_toStartOf="@id/text_secondary_muscle_create_recycler_item" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_secondary_muscle_create_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_secondary_muscle_create_recycler_item"
            app:layout_constraintTop_toTopOf="@id/text_label_secondary_muscle_create_recycler_item"
            app:layout_constraintEnd_toEndOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/button_add_create_exercise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>