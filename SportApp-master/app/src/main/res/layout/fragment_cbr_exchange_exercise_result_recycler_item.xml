<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/fragment_exchange_exercise_cbr_result_recycler_item">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_header_cbr_result_exchange_exercise_recycler_item"
        android:background="@color/darkGrayRecycler"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_change_toggle_chosen_exchange_exercise_recycler_item">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_title_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintStart_toStartOf="@id/constraint_header_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintTop_toTopOf="@id/constraint_header_cbr_result_exchange_exercise_recycler_item"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_content_cbr_result_exchange_exercise_recycler_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_change_toggle_chosen_exchange_exercise_recycler_item"
        app:layout_constraintTop_toBottomOf="@+id/constraint_header_cbr_result_exchange_exercise_recycler_item">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/prime_muscle_label"
            android:id="@+id/text_label_prime_muscle_cbr_result"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/text_prime_muscle_cbr_result_exchange_exercise_recycler_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_prime_muscle_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_prime_muscle_cbr_result"
            app:layout_constraintTop_toTopOf="@id/text_label_prime_muscle_cbr_result"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_secondary_muscle_cbr_result_exchange_exercise_recycler_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/secondary_muscle_label"
            android:id="@+id/text_label_similarity_cbr_result_exercise_list_recycler_item"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_label_prime_muscle_cbr_result"
            app:layout_constraintEnd_toStartOf="@id/text_secondary_muscle_cbr_result_exchange_exercise_recycler_item" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_secondary_muscle_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_similarity_cbr_result_exercise_list_recycler_item"
            app:layout_constraintTop_toTopOf="@id/text_label_similarity_cbr_result_exercise_list_recycler_item"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/label_similarity"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_label_similarity_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/text_label_similarity_cbr_result_exercise_list_recycler_item"
            app:layout_constraintEnd_toStartOf="@id/text_similarity_cbr_result_exchange_exercise_recycler_item"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textSize="@dimen/target_text_size_small"
            android:id="@+id/text_similarity_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_similarity_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintTop_toTopOf="@id/text_label_similarity_cbr_result_exchange_exercise_recycler_item"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.cbr__fitness.customViewElements.ColorChangeToggleButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/color_change_toggle_chosen_exchange_exercise_recycler_item"
        android:padding="0dp"
        android:layout_margin="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>