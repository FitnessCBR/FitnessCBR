<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/workout_plan_header_delete_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_change_toggle_delete_exercise_list_recycler_item"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/darkGrayRecycler">
        <TextView
            android:id="@+id/text_plan_name_delete_exercise_list_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/text_main_muscle_delete_exercise_list_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/constraint_plan_content_delete_exercise_list_recycler_item"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/color_change_toggle_delete_exercise_list_recycler_item"
        app:layout_constraintTop_toBottomOf="@id/workout_plan_header_delete_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/text_label_goal_delete_exercise_list_recycler_item"
            android:textSize="@dimen/target_text_size_small"
            android:text="@string/goal_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:id="@+id/text_goal_delete_exercise_list_recycler_item"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintTop_toTopOf="@id/text_label_goal_delete_exercise_list_recycler_item"
            app:layout_constraintStart_toEndOf="@id/text_label_goal_delete_exercise_list_recycler_item" />


        <TextView
            android:id="@+id/text_label_duration_delete_exercise_list_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_duration"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintTop_toBottomOf="@id/text_label_goal_delete_exercise_list_recycler_item"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/text_duration_delete_exercise_list_recycler_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/target_text_size_small"
            app:layout_constraintStart_toEndOf="@id/text_label_duration_delete_exercise_list_recycler_item"
            app:layout_constraintTop_toTopOf="@id/text_label_duration_delete_exercise_list_recycler_item"/>

        <androidx.constraintlayout.helper.widget.Flow
            android:id="@+id/flow_equipment_delete_exercise_list_recycler_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:flow_horizontalGap="5dp"
            app:flow_horizontalStyle="packed"
            app:flow_verticalGap="5dp"
            app:flow_verticalStyle="packed"
            app:flow_wrapMode="chain"
            app:layout_constraintTop_toBottomOf="@id/text_label_duration_delete_exercise_list_recycler_item"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.example.cbr__fitness.customViewElements.ColorChangeToggleButton
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/color_change_toggle_delete_exercise_list_recycler_item"
        android:padding="0dp"
        android:layout_margin="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>